{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",

  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "foreground": "#6272a4",
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\ue711",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31c",
            "windows": "\ue70f"
          },
          "style": "plain",
          "template": "{{ .Icon }}  "
        },
        {
          "type": "session",
          "foreground": "#bd93f9",
          "style": "plain",
          "template": "{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "foreground": "#ff79c6",
          "properties": {
            "folder_icon": "..\ue5fe ..",
            "home_icon": "~",
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }} "
        },
        {
          "type": "git",
          "foreground": "#8e91a9",
          "properties": {
            "branch_icon": "",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf0c3 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          },
          "style": "plain",
          "template": "{{ .UpstreamIcon }} {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }} <cyan>{{ if gt .Behind 0 }}⇣{{ end }}{{ if gt .Ahead 0 }}⇡{{ end }}</>"
        }
      ]
    },
    {
      "type": "rprompt",
      "overflow": "hidden",
      "segments": [
        {
          "type": "executiontime",
          "foreground": "#a7ac6b",
          "properties": {
            "threshhold": 5000
          },
          "style": "plain",
          "template": "{{ .FormattedMs }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "python",
          "foreground": "#ffffff",
          "properties": {
            "display_mode": "context",
            "fetch_virtual_env": true
          },
          "style": "plain",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} "
        },
        {
          "type": "time",
          "foreground": "#c4c4bd",
          "style": "plain",
          "template": "{{ .CurrentDate | date .Format }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "shell",
          "foreground": "#ffffff",
          "style": "plain",
          "template": "{{ .Name }} "
        },
        {
          "type": "text",
          "foreground": "#bd93f9",
          "foreground_templates": [
            "{{if gt .Code 0}}red{{end}}",
            "{{if eq .Code 0}}#bd93f9{{end}}"
          ],
          "style": "plain",
          "template": "\u276f "
        }
      ]
    }
  ],
  "secondary_prompt": {
    "foreground": "#bd93f9",
    "background": "transparent",
    "template": "\u276f\u276f "
  },
  "console_title_template": "{{ .Folder }}",
  "version": 2
}
